@model doanmonhocweb.Models.Sach
@using doanmonhocweb.Models



@{
    /**/

    ViewBag.Title = "Chỉnh Sửa Thông Tin Sách";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdministrator.cshtml";
}
<title>Trang Quản Trị| @ViewBag.Title </title>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/AdminStyle/Adminstylesheet.css" rel="stylesheet" />
<div class="contentAd">
    @using (Html.BeginForm("Edit","Products",FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4> Sửa Thông Tin Sách</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Ma_Sach)
        <div class="form-group">
            @Html.Label("Tên Sách:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ten_Sach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ten_Sach, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Tác Giả:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tac_Gia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tac_Gia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Giá:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Giá Cửa Hàng:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaCuaHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaCuaHang, "", new { @class = "text-danger" })
            </div>
        </div>
        >

        <div class="form-group">
            @Html.Label("Đơn vị Tính:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="DonViTinh" class="form-control " style="width:150px;">
                    <option value="VNĐ">Vnđ</option>
                </select>
                @Html.ValidationMessageFor(model => model.Don_Vi_Tinh, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Số lượng tồn:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Loại Bìa:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="LoaiBia" class="form-control " style="width:210px;">

                    <option value="Bìa Cứng">Bìa Cứng</option>
                    <option value="Bìa Mềm">Bìa Mềm</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Xuất Xứ Ấn Phẩm:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="XuatXu" class="form-control " style="width:210px;">
                    <option value="Việt Nam">Việt Nam</option>
                    <option value="Nước Ngoài">Nước Ngoài</option>
                </select>

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.SoLuongBan, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Nha Xuat Ban", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="Chude" class="form-control " style="width:210px;">
                    @{
                        dataMeBookEntities dbo = new dataMeBookEntities();
                        foreach (var i in dbo.NXBs)
                        {
                            <option value="@i.Ma_NXB">@i.TenNXB</option>
                        }
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Ma_NXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Chủ Đề", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="NXB" class="form-control " style="width:210px;">
                    @{

                        foreach (var i in dbo.ChuDes)
                        {
                            <option value="@i.Ma_CD">@i.TenCD</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mô tả:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control sizemotasach" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Hình Ảnh:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="Postfile" />
                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu Thông Tin" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>