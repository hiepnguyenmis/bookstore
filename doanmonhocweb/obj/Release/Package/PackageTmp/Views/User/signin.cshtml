
@{


    Layout = null;
}
@using doanmonhocweb.Models
@model doanmonhocweb.Models.signin
<!DOCTYPE HTML>
<html lang="vi">

<head>
    <title>ME&BOOK|Đăng Nhập</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/style/signup/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/style/signup/css/style.css" rel="stylesheet" />
    <!--fonts-->
    <link href="//fonts.googleapis.com/css?family=Josefin+Sans:100,100i,300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=PT+Sans:400,400i,700,700i" rel="stylesheet">
    <!--//fonts-->
</head>
<body>
    <!-- login -->
    <div class="login-section-agileits">
        <h3 class="form-head">Đăng Nhập</h3>
        <form  method="post">
            <div class="w3ls-icon">
                <span class="fa fa-user" aria-hidden="true"></span>
                @Html.TextBoxFor(m => m.Username,new { @placeholder = "Tên Đăng Nhập", @class = "Username" })<br />


            </div>
            <div class="w3ls-icon">
                <span class="fa fa-lock" aria-hidden="true"></span>
                @Html.PasswordFor(m => m.Password,new { @placeholder="Mật Khẩu", @class = "Password1" })<br />
            </div>
            <div class="w3layouts" style="margin-bottom: 10px">
                <input type="checkbox" name="dongy" id="remember">Nhớ tài khoản
            </div>
            <div class="mess">
                @Html.ValidationSummary()
                @ViewBag.Errsignup
            </div>
            <div >
                <p>Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký","signup","User")</p>
            </div>
            <input type="submit" value="Đăng Nhập" />
        </form>
    </div>
    <p class="footer-agile">
        &copy @DateTime.Now.Year.ToString() - Bản Quyền Thuộc Cửa Hàng Sách @Html.ActionLink("ME&BOOK", "Index", "Home")
    </p>
</body>

</html>
