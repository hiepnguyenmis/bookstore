@model IEnumerable<doanmonhocweb.Models.Cart>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/style/content.css" rel="stylesheet" />
<div class="featured Cart">
    <div class="tab"><h3><b>Giỏ Hàng</b></h3></div>
    <div class="Main_Cart">
        <table class="table">
            <tr>
                <th>
                    @Html.Label("Mã Sản Phẩm")
                </th>
                <th>
                    @Html.Label("Tên Sản Phẩm")
                </th>
                <th>
                    @Html.Label("Đơn Giá")
                </th>
                <th>
                    @Html.Label("Hình Ảnh")
                </th>
                <th>
                    @Html.Label("Số Lượng")
                </th>
                <th>
                    @Html.Label("Thành Tiền")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ma_Sach)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSanPham)
                    </td>
                    <td>
                        @String.Format("{0:0,0 }", item.DonGia).Replace(",", ".") VNĐ
                    </td>
                    <td>
                        <img src="@Url.Content("~/Content/ImgBook/"+ item.HinhAnh)" style="width:40px; height:50px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td>
                        @String.Format("{0:0,0 }", item.ThanhTien).Replace(",", ".") VNĐ
                    </td>
                    
                    <td>
                        @Html.ActionLink("Chỉnh Sửa", "EditCart")
                    </td>
                </tr>
            }

        </table>
        <table>
            <tr>
                <td>
                    
                    <h3 style="color:red">Tổng Giá Trị Đơn Hàng: @String.Format("{0:0,0 }", ViewBag.TongTien).Replace(",", ".") VNĐ</h3>
                            </td>
                <td>
                    <a href="@Url.Action("DetailOrder","Cart")"><input type="button" value="Thanh Toán" class="btn btn-danger" style="margin-left:85%;" /></a>
                </td>
            </tr>
        </table>
    </div>
</div>

