@model doanmonhocweb.Areas.Admin.Models.info_Book
@using doanmonhocweb.Models
@{
    ViewBag.Title = "Thêm Sách";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdministrator.cshtml";
}
<script src="~/Scripts/javascript/jquery-3.3.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/AdminStyle/Adminstylesheet.css" rel="stylesheet" />
<title>Trang Quản Trị| @ViewBag.Title </title>

<div class="contentAd">
    @using (Html.BeginForm("AddBook", "Products", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Thêm Sách</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Tên Sách:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Tác Giả", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TacGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TacGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Giá Cửa Hàng:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GiaCuaHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiaCuaHang, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Giá:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Đơn Vị Tính:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="form-control" name="DonViTinh">
                        <option value="VNĐ">VNĐ</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nhà Xuất Bản:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select name="NXB" class="form-control " style="width:210px;">
                        @{
                            dataMeBookEntities dbo = new dataMeBookEntities();
                            foreach (var i in dbo.NXBs)
                            {
                                <option value="@i.Ma_NXB">@i.TenNXB</option>
                            }
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Chủ Đề:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select name="ChuDe" class="form-control " style="width:210px;">
                        @{

                            foreach (var i in dbo.ChuDes)
                            {
                                <option value="@i.Ma_CD">@i.TenCD</option>
                            }
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.Machude, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Xuất Xứ Ấn Phẩm:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select name="XuatXu" class="form-control " style="width:210px;">
                        <option value="Việt Nam">Việt Nam</option>
                        <option value="Nước Ngoài">Nước Ngoài</option>
                    </select>

                    @Html.ValidationMessageFor(model => model.Machude, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nội Dung:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control mota"  } , @name = "Mota" })
                    @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
                    @*<script>
                        CKEDITOR.replace('Mota', {
                            customConfig: "~/Areas/Admin/Content/Plugin/ckeditor/config.js",
                        });
                    </script>*@
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Số Trang:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Sotrang, new { htmlAttributes = new { @class = "form-control mota" } })
                    @Html.ValidationMessageFor(model => model.Sotrang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Loại Bìa:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select name="LoaiBia" class="form-control " style="width:210px;">

                        <option value="Bìa Cứng">Bìa Cứng</option>
                        <option value="Bìa Mềm">Bìa Mềm</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Số Lượng Tồn:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control mota" } })
                    @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Hình Ảnh:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="Postimgbook" class="btn-default" />
                </div>
            </div>
           
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm Sách" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Xem Trong Danh Sách ", "Book")
    </div>
</div>