@using doanmonhocweb.Models
@model Sach
@{
    ViewBag.Title = "Chi tiết Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
    dataMeBookEntities dbo = new dataMeBookEntities();
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title| @Model.Ten_Sach</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!--jQuery(necessary for Bootstrap's JavaScript plugins)-->
    <script src="~/Scripts/javascript/jquery-3.3.1.min.js"></script>
    <!--Custom-Theme-files-->
    <link href="~/Content/font/font.css" rel="stylesheet" />
    <!--theme-style-->
    <link href="~/Content/style/Products_Single.css" rel="stylesheet" />
    <!--//theme-style-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--start-menu-->
    <link href="~/Content/style/memenu_single.css" rel="stylesheet" />
    <script>$(document).ready(function () { $(".memenu").memenu(); });</script>
    <!--dropdown-->
    <script src="~/Scripts/Simple/jquery.easydropdown.js"></script>
    <script type="text/javascript">
        $(function () {

            var menu_ul = $('.menu_drop > li > ul'),
                menu_a = $('.menu_drop > li > a');

            menu_ul.hide();

            menu_a.click(function (e) {
                e.preventDefault();
                if (!$(this).hasClass('active')) {
                    menu_a.removeClass('active');
                    menu_ul.filter(':visible').slideUp('normal');
                    $(this).addClass('active').next().stop(true, true).slideDown('normal');
                } else {
                    $(this).removeClass('active');
                    $(this).next().stop(true, true).slideUp('normal');
                }
            });

        });
    </script>
</head>
<body>
    <div class="wrapper wrapper_main_single">
        <div class="single contact  featured">
            <div class="tab"><h3 id="lbl_infor_book"><b>THÔNG TIN SẢN PHẨM-ĐẶT HÀNG</b></h3></div>
            <div class="single_container">
                <div class="single-main">
                    <div class="col-md-9 single-main-left single-left" id="main">
                        <div class="sngl-top">
                            <div class="col-md-5 single-top-left">
                                <div class="flexslider">
                                    <ul class="slides">
                                        <li data-thumb="~/Content/image-index/di-tim-le-song.jpg">
                                            <div class="thumb-image"> <img src="@Url.Content("~/Content/ImgBook/"+ Model.HinhAnh)" /> </div>
                                        </li>
                                    </ul>
                                </div>
                                <!-- FlexSlider -->

                                <script src="~/Scripts/Simple/jquery.flexslider.js"></script>
                                <script src="~/Scripts/Simple/imagezoom.js"></script>
                                <link rel="stylesheet" href="css/flexslider.css" type="text/css" media="screen" />

                                <script>
                                    // Can also be used with $(document).ready()
                                    $(window).load(function () {
                                        $('.flexslider').flexslider({
                                            animation: "slide",
                                            controlNav: "thumbnails"
                                        });
                                    });
                                </script>
                            </div>
                            <div class="col-md-7 single-top-right">
                                <div class="single-para simpleCart_shelfItem">
                                    <h2 id="title_single_book">@Model.Ten_Sach</h2>
                                    <div class="star-on">
                                        <div class="author_singlebook">
                                            <span>Tác Giả:  </span><span id="author_single_book">@Model.Tac_Gia</span>
                                        </div>
                                        <div class="clearfix"> </div>
                                    </div>

                                    <span>Giá Bìa:</span><del><h5 class="item_price">@String.Format("{0:0,0 }", Model.Gia).Replace(",", ".") VNĐ</h5></del>
                                    <span>Giá Tại Me&Book:</span><h5 class="item_priceMB">@String.Format("{0:0,0 }", Model.GiaCuaHang).Replace(",", ".") VNĐ</h5>
                                    @using (Html.BeginForm("AddCart", "Cart", new { @MaSach = Model.Ma_Sach, @Re_Url = Request.Url.ToString() }))
                                    {
                                        <div>
                                            <ul>
                                                <li>
                                                    @*Số Lượng:
                        <input type="number" name="txt_Soluongdat" value="1" />*@
                                                </li>
                                            </ul>
                                        </div>
                                        <ul class="tag-men">
                                            <li>
                                                <span class="KM">THÔNG TIN KHUYẾN MÃI- GIAO HÀNG</span>

                                            </li>
                                            <li>
                                                @*<span class="prov">Nhận Hàng Tại:</span>
                    <select>
                        <option>
                            Tp.Hồ Chí Minh
                        </option>
                        <option>
                            Bình Dương
                        </option>
                    </select>*@
                                            </li>
                                            <li>
                                                -<span class="sales">Miễn phí giao hàng toàn quốc cho đơn hàng từ 250.000 đ</span>
                                            </li>
                                            <li>
                                                -<span class="sales"> Miễn phí giao hàng tại TP.Hồ Chí Minh cho đơn hàng từ 150.000 đ</span>
                                            </li>
                                        </ul>
                                        
                                            if (@Model.SoLuongTon <= 0)
                                            {
                                                <input type="button" value="Hết Hàng" class="btn_addcart" />
                                            }
                                            else
                                            {
                                                <input type="submit" value="Thêm Vào Giỏ" class="btn_addcart" />
                                            }
                                        

                                    }
                                </div>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="menutab_single_book">
                    <a href="#ND1">
                        <div class="sub_menutabsingle"><span>NỘI DUNG</span></div>
                    </a>
                    <a href="#table1">
                        <div class="sub_menutabsingle"><span>THÔNG TIN SACH</span></div>
                    </a>

                </div>
                <div class="ND" id="ND1">
                    <span>NỘI DUNG</span>
                    <div class="ndct">
                        <p id="content_booksingle">
                            @Model.Mota

                        </p>
                    </div>
                </div>

                <div class="ND TTCT" id="table1">
                    <span>THÔNG TIN SÁCH</span>
                </div>
                <div class="menuinfo_booksingle">
                    <div class="table_info">
                        <table class="table_infor_book">
                            <tr class="column_book_infor">
                                <td class="row_1">Nhà Phát Hành</td>
                                <td class="row_1"></td>

                            </tr>
                            <tr class="column_book_infor">
                                <td class="row_2">Nhà Xuất Bản</td>

                                <td class="row_2">@Model.NXB.TenNXB</td>

                            </tr>
                            <tr class="column_book_infor">
                                <td class="row_1">Trọng lượng vận chuyển</td>

                                <td class="row_1"></td>

                            </tr>
                            <tr class="column_book_infor">
                                <td class="row_2">Thể Loại</td>

                                <td class="row_2"> </td>

                            </tr>
                            <tr class="column_book_infor">
                                <td class="row_1">Số Trang</td>

                                <td class="row_1">@Model.SoTrang</td>

                            </tr>
                            <tr class="column_book_infor">
                                <td class="row_2">Ngôn Ngữ Sách</td>

                                <td class="row_2">@Model.Loai</td>

                            </tr>
                            <tr class="column_book_infor">
                                <td class="row_1">Loại Bìa</td>
                                <td class="row_1">@Model.LoaiBia</td>

                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="featured category">
            <div class="tab"><h3><b>CÙNG THỂ LOẠI</b></h3></div>
            <div class="list-book" id="cetegory">
             
            <div class="list-book" id="tab3">
                @{


                    var LienQuan = (from a in dbo.Saches where a.ChuDe.Ma_CD== Model.Ma_CD && a.Loai==Model.Loai orderby a.NgayCapNhat descending select a).Take(4).ToList();

                    foreach (var item in LienQuan)
                    {

                        <a href="@Url.Action("Single_products","Products",new {@Ma_Sach=item.Ma_Sach })">
                            <div class="childbook">

                                <div class="book">
                                    <div class="img">


                                        <img src="@Url.Content("~/Content/ImgBook/"+ item.HinhAnh)" />

                                    </div>
                                </div>
                                <div class="btn_book">
                                    <div class="titlebook"><p>@item.Ten_Sach</p></div>
                                    <div class="author_book"><p>@item.Tac_Gia</p></div>
                                    <div class="pricebook">@String.Format("{0:0,0 }", item.GiaCuaHang).Replace(",", ".") VNĐ</div>
                                    <div class="discount"><del>@String.Format("{0:0,0 }", item.Gia).Replace(",", ".") VNĐ</del></div>
                                </div>

                            </div>
                        </a>

                    }

                }
                
                <div class="clear"></div>
            </div>
        </div>
    </div>
</body>
</html>