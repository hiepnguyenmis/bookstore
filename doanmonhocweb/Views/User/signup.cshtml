
@{
    Layout = null;
}
@using doanmonhocweb.Models

@model  signup


<!DOCTYPE HTML>
<html lang="vi">

<head>
    <title>ME&BOOK|Đăng Ký</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript">
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link href="~/Content/style/signup/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/style/signup/css/style.css" rel="stylesheet" />
    <!--fonts-->
    <link href="//fonts.googleapis.com/css?family=Josefin+Sans:100,100i,300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=PT+Sans:400,400i,700,700i" rel="stylesheet">
    <!--//fonts-->
</head>
<body>
    <!-- login -->
    <div class="login-section-agileits">
        <h3 class="form-head">Đăng Ký</h3>
        <form method="post">
            <div class="w3ls-icon">
                <span class="fa fa-user" aria-hidden="true"></span>
                @Html.TextBoxFor(m => m.Username, new { @placeholder = "Tên Đăng Nhập", @class = "Username" })
            </div>
            <div class="w3ls-icon">
                <span class="fa fa-envelope" aria-hidden="true"></span>
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "Email" })
            </div>
            <div class="w3ls-icon">
                <span class="fa fa-phone" aria-hidden="true"></span>
                @Html.TextBoxFor(m => m.phone, new { @placeholder = "Số Điện Thoại", @class = "Phone" })
            </div>
            <div class="w3ls-icon">
                <span class="fa fa-lock" aria-hidden="true"></span>
                @Html.PasswordFor(m => m.Password1, new { @placeholder = "Mật Khẩu", @class = "Password1" })
            </div>
            <div class="w3ls-icon">
                <span class="fa fa-lock" aria-hidden="true"></span>
                @Html.PasswordFor(m => m.Password2, new { @placeholder = "Nhập Lại Mật Khẩu", @class = "Password2" })
            </div>
            <div class="w3layouts" style="margin-bottom: 10px">
                <input type="checkbox" name="dongy" id="agree">Đồng ý với các <a href="" style="color:#ff006e">Điều Khoản</a> của chúng tôi
            </div>
            <div class="mess">
                @Html.ValidationSummary()
                @ViewBag.ErrSigupUserName
                @ViewBag.ErrSigupEmail
            </div>
            <input type="submit" value="Đăng Ký Ngay">

        </form>
    </div>
    <p class="footer-agile">
        &copy @DateTime.Now.Year.ToString() - Bản Quyền Thuộc Cửa Hàng Sách @Html.ActionLink("ME&BOOK", "Index", "Home")
    </p>
    <script src="~/Scripts/javascript/jssignup/testpassword.js"></script>
</body>
</html>
